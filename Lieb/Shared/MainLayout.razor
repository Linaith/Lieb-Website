@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inherits LayoutComponentBase

<PageTitle>LIEB</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
            <Authorized>
                <a href="Account/Logout" class="loginText"><span class="oi oi-power-standby" aria-hidden="true" style="margin-right:5px;"></span>Log out</a>
            </Authorized>
            <NotAuthorized>
                <a href="Account/Login" class="loginText"><span class="oi oi-power-standby" aria-hidden="true" style="margin-right:5px;"></span>Log in</a>
            </NotAuthorized>
        </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
